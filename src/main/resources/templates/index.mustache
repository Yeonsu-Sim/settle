{{>layout/header}}

    <h1 class="col-md-12 mb-5">Settle the Payment!</h1>
    <div class="col-md-12">
        <!-- 로그인 가능 영역 -->
        <div class="row justify-content-between">
            <div class="col-md-3">
                <a href="/bills/save" role="button" class="btn btn-primary">영수증 등록</a>
            </div>
            <div class="col-md-3 d-flex justify-content-end align-items-center">
                {{#userName}}
                    Logged in as: <span id="user">{{userName}}</span>
                    <a href="/logout" class="btn btn-info active ml-3" role="button">Logout</a>
                {{/userName}}
            </div>
        </div>
        <br>
        <!-- 목록 출력 영역 -->
        <table class="table table-horizontal table-bordered">
            <thead class="thead-strong">
            <tr>
                <th>번호</th>
                <th>품목명</th>
                <th>금액</th>
                <th>결제자</th>
                <th>참여자</th>
                <th>결제일</th>
                <th>메모</th>
            </tr>
            </thead>
            <tbody id="tbody">
            {{#bills}}
                <tr>
                    <td>{{id}}</td>
                    <td><a href="/bills/update/{{id}}">{{product}}</a></td>
                    <td>{{amount}}</td>
                    <td>{{payer}}</td>
                    <td>{{participants}}</td>
                    <td>{{dateTime}}</td>
                    <td>{{memo}}</td>
                </tr>
            {{/bills}}
            </tbody>
        </table>
    </div>

{{>layout/footer}}